<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94CBC4"
    tools:context="com.example.SmartGuidance_App.login_siginup.signupacivity">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إنشاء حساب جديد"
            android:textSize="30dp"
            android:textColor="#3F3D55"

            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_margin="15dp"
            android:hint="أدخل البريد الإلكتروني"
            android:inputType="textEmailAddress"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etPass"
            android:layout_margin="15dp"
            android:hint="أدخل الرمز السري"
            android:inputType="textPassword"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btRegister"
            android:text="تسجيل"
            android:layout_margin="15dp"
          android:background="@drawable/buttonshap2"
            android:textColor="#94CBC5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





    </LinearLayout>


</LinearLayout>

